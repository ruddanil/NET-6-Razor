@page
@model NET_6_Razor.Pages.Private.UserListFromCacheModel
@{
}

<h1>Список пользователей из кэша</h1>
<hr />
<table class="table">
    <thead>
        <tr><th>ID</th><th>Имя</th><th>Фамилия</th><th>Отчество</th><th>Возраст</th><th>Логин</th><th>Пароль</th><th>Email</th><th>Телефон</th><th>Администратор</th></tr>
    </thead>
    <tbody>
        @if (Model.userListCache != null)
        {
            foreach (var user in Model.userListCache)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.MiddleName</td>
                    <td>@user.Age</td>
                    <td>@user.Login</td>
                    <td>@user.Password</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>@user.IsAdmin</td>
                    <td>
                        <form method="post">
                            <button type="submit" asp-page="/Private/UserUpdate" asp-route-id="@user.Id">Изменить</button>
                            <button type="submit" asp-page-handler="Delete" asp-route-id="@user.Id">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

