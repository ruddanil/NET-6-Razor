@page
@model NET_6_Razor.Pages.UserCRUD.UserUpdateModel
@{
}
<h1>Редактирование пользователя</h1>
<hr />
<form method="post">
    <div>
        <label>Имя:</label>
        <div>
            <input type="text" name="firstName" placeholder="Иван" value="@Model.user.FirstName" required />
        </div>
    </div>
    <div>
        <label>Фамилия:</label>
        <div>
            <input type="text" name="lastName" placeholder="Васильев" value="@Model.user.LastName" required />
        </div>
    </div>
    <div>
        <label>Отчество:</label>
        <div>
            <input type="text" name="middleName" placeholder="Анатольевич" value="@Model.user.MiddleName" required />
        </div>
    </div>
    <div>
        <label>Возраст</label>
        <div>
            <input type="number" name="age" placeholder="25" min="18" max="65" value="@Model.user.Age" required />
        </div>
    </div>
        <div>
        <label>Логин:</label>
        <div>
            <input type="text" name="login" placeholder="vasya" minlength="5" value="@Model.user.Login" required />
        </div>
    </div>
        <div>
        <label>Пароль:</label>
        <div>
            <input type="password" name="password" placeholder="********" id="password" minlength="8" value="@Model.user.Password" required />
        </div>
        <div>
        <label>Электронная почта:</label>
        <div>
            <input type="email" name="email" placeholder="example@mail.ru" value="@Model.user.Email" required />
        </div>
    </div>
        <div>
        <label>Номер телефона:</label>
        <div>
            <input type="text" name="phone" placeholder="+78005553535" value="@Model.user.Phone" required />
        </div>
    </div>
    <br />
    <div>
        <input type="submit" value="Сохранить" asp-page-handler="Update" asp-route-id="@Model.user.Id"/>
    </div>
</form>
<br />
<div>
    <a asp-page="/UserCRUD/UserList">Вернуться к списку</a>
</div>